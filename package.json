{
  "name": "shell-shortcut",
  "displayName": "Shell Shortcut",
  "version": "0.0.1",
  "homepage": "https://github.com/hi-ogawa/vscode-extension-shell-shortcut",
  "repository": {
    "type": "git",
    "url": "https://github.com/hi-ogawa/vscode-extension-shell-shortcut"
  },
  "license": "MIT",
  "publisher": "hi-ogawa",
  "type": "commonjs",
  "main": "./dist/esbuild/extension.js",
  "scripts": {
    "dev": "pnpm run --stream /^dev:/",
    "tsc": "tsc",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "esbuild": "esbuild src/extension.ts --outfile=dist/esbuild/extension.js --bundle --platform=node --external:vscode",
    "dev:esbuild": "pnpm esbuild --watch",
    "build": "pnpm esbuild && bash misc/build.sh",
    "test": "node ./dist/tsc/test/run-test.js",
    "lint": "pnpm run --sequential /^lint:/",
    "lint-check": "pnpm run --sequential /^lint-check:/",
    "lint:prettier": "prettier --write --cache .",
    "lint-check:prettier": "prettier --check --cache ."
  },
  "contributes": {
    "commands": [
      {
        "title": "Run Shell Command",
        "command": "hi-ogawa.shell-shortcut.run",
        "enablement": "resourceSet"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "hi-ogawa.shell-shortcut.run"
        }
      ],
      "editor/title/context": [
        {
          "command": "hi-ogawa.shell-shortcut.run"
        }
      ],
      "explorer/context": [
        {
          "command": "hi-ogawa.shell-shortcut.run"
        }
      ]
    },
    "configuration": {
      "title": "shell-shortcut configuration",
      "properties": {
        "hi-ogawa.shell-shortcut": {
          "type": "object",
          "properties": {
            "commands": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "command"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  },
                  "pipeInput": {
                    "type": "boolean"
                  },
                  "pipeOutput": {
                    "type": "boolean"
                  }
                }
              },
              "default": []
            }
          }
        }
      }
    }
  },
  "activationEvents": [],
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.10",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.23.0",
    "esbuild": "^0.20.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "volta": {
    "node": "20.11.0"
  },
  "packageManager": "pnpm@8.15.0+sha256.fd1eab68a6d403f35cf3259c53780d70b0f14bd74e39da2f917d201f554d8665"
}
