{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/tsc",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
